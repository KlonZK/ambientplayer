function DoPlay(track, vol, x, y, z) 
	if not (tracks[track]) then Echo("<ambient player>: track not found!") return false
	else
		local tr=track
		if (tracks[tr].generated) then	tr=tracks[tr].file	end
		if (PlaySound(tr, vol, x, y, z)) then
			if (verbose) then
				Echo("<ambient player>: playing "..track.." at volume: "..string.format("%.2f", vol))
			end
			return true		
		end	
		Echo("<ambient player>: playback of "..track.." failed, not an audio file?")
		return false
	end
end


