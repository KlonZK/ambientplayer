function widget:Update(dt) 	
	if not (gameStarted) then return end
	mx,my = Spring.GetMouseState()
	if (needReload and autoreload) then ReloadSoundDefs() needReload = false end		
	if (secondsToUpdate>0) then	secondsToUpdate=secondsToUpdate-dt return
	else secondsToUpdate=updateIntervalSeconds
	end
	
	if not (autoplay) then return end
	for emit, tab in pairs (emitters) do
		if (type(tab) == 'table') then		
			for track, _ in pairs(tab.playlist) do
				local trk = tracklist.tracks[track]
				local tmp = tracklist.tmpvalues[track]
				if (trk.rnd > 0) then
					tmp.timeframe=tmp.timeframe-updateIntervalSeconds
					if (tmp.timeframe < 0) then
						tmp.timeframe = 0
						if (random(trk.rnd) == 1) then						
							DoPlay(trk, ambientVolume, tab.pos[1], tab.pos[2], tab.pos[3])
							tmp.timeframe=tmp.minlooptime
						end
					end
				end
			end
		end	
	end
